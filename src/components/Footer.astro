<footer
  class="bg-darkColorPrimary text-lightColor text-xl border-t-2 border-lightColor"
>
  <div
    class="max-w-5xl container mx-auto px-10 py-8 flex flex-col lg:flex-row justify-between items-center gap-10"
  >
    <a
      class="font-bold text-gradient text-xl inline-block hover:scale-110 transition-all duration-700"
      href="/">mortdotdev</a
    >
    <p class="text-greenColor tracking-wider text-xl font-bold italic">
      &quot; Coding is HARD &quot;
    </p>
    <div class="flex flex-col lg:flex-row justify-between items-center gap-10">
      <time class="text-center text-sm"></time>
    </div>
  </div>
</footer>

<style>
  footer a {
    font-family: "Pacifico", cursive;
  }
</style>

<script>
  import { gsap } from "gsap";

  gsap.to("footer p", {
    color: "#F4C520",
    textDecoration: "underline",
    textDecorationColor: "#F4C520",
    duration: 2,
    repeat: -1,
  });

  const displayCurrentDateTime = () => {
    const options: Intl.DateTimeFormatOptions = {
      weekday: "short",
      year: "numeric",
      month: "short",
      day: "numeric",
      hour: "numeric",
      minute: "numeric",
      second: "numeric",
    };

    const userLocale = navigator.language || "en-US";
    const formattedDateTime = new Date().toLocaleString(userLocale, options);

    document.querySelector("time")!.textContent = formattedDateTime;
  };

  setInterval(displayCurrentDateTime, 1000);

  displayCurrentDateTime();
</script>
